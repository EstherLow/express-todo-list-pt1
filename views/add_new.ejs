<h1>Add New To-do</h1>
<form method="POST" class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-md-2" for="name"> Name: </label>
    <div class="col-md-6"><input type="text" class="form-control" name="name"></input></div>
  </div>
    <div class="form-group">
    <label class="control-label col-md-2" for="description"> Description: </label>
    <div class="col-md-6"><input type="text" class="form-control" name="description"></input></div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2" for="completed"> Completed: </label>
    <div class="col-md-6"><input type="radio" name="completed" value="true">True</input>
      <input type="radio" name="completed" value="false" checked="true">False</input>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-1">
      <input type="submit" value="Submit">
    </div>
  </div>
  </form>
